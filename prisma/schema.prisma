// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Definition {
  uid        String  @id @default(cuid())
  word       String  @unique
  definition String
  sus        Boolean @default(false)
  example    String?
  dialect    String? @default("all")
  english    String?
  swahili    String?
}

model Variation {
  uid         String @id @default(cuid())
  name        String @unique
  description String
  country     String
  regoion     String
}
